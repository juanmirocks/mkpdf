{
  "name": "mkpdf",
  "version": "1.2.0-wip",
  "description": "🖨️ CLI & TypeScript API to \"print\" (convert) given URL/HTML/Markdown into a PDF, using Google's Chrome & puppeteer",
  "keywords": [
    "pdf",
    "pdf-generation",
    "headless-chrome",
    "puppeteer",
    "pdf-print",
    "html-to-pdf",
    "url-to-pdf"
  ],
  "author": "Dr. Juan Miguel Cejuela",
  "license": "Apache-2.0",
  "source": "src/cli.ts",
  "main": "dist/cli.js",
  "scripts": {
    "clean": "rm  dist/* 2> /dev/null || true",
    "_prod": "parcel build",
    "prod": "npm run clean; npm run _prod",
    "check": "tsc --noEmit",
    "check-watch": "npm run check -- -watch",
    "lint": "eslint . --fix",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "dependencies": {
    "puppeteer": ">=18.x <=19.x"
  },
  "devDependencies": {
    "@parcel/transformer-typescript-tsc": "^2.8.3",
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "parcel": "^2.8.3",
    "ts-jest": "^29.1.0",
    "typescript": "^4.9.5"
  },
  "workspaces": [
    "plugins/*"
  ]
}
